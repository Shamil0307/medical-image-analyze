<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutTumorActivity">

    <TextView
        android:id="@+id/textViewAboutTumorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Brain Tumors"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textViewAboutTumorDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAboutTumorTitle"
        android:layout_marginTop="16dp"
        android:text="Information about brain tumors goes here..."
        android:textSize="16sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>



